<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema aplicado à janela do Android enquanto o processo está iniciando quando o modo escuro do OS está ativado -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Tema aplicado à janela do Android assim que o processo é iniciado -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">#FFFFFF</item>
    </style>
    <!-- Novo tema compatível com AppCompat -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Personalizações do tema -->
        <item name="android:windowBackground">#FFFFFF</item>
    </style>
</resources>

